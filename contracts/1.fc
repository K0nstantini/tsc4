}

;; testable
(cell) find_branch_by_hash(int hash, cell tree) method_id {
    tuple stack = null();
    stack~push_back(tree);

    while (~ stack.is_null()) {
        cell c = stack~pop_back();
        if (c.cell_hash() == hash) {
            return c;
        }
        slice s = c.begin_parse();

        int refs = s.slice_refs();
        if (refs > 0) {
            if (refs == 1) {
                stack~push_back(s~load_ref());
            } else {
                cell temp_cell = s~load_ref();
                repeat (refs - 1) {
                    stack~push_back(s~load_ref());
                }
                stack~push_back(temp_cell);
            }
        }
    }
    return begin_cell().end_cell();

